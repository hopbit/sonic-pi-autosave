use_bpm 128
live_loop :foo do
  4.times do
    sample :bd_haus
    sleep 0.5
    with_fx :wobble do
      sample :drum_cymbal_closed, amp: 0.25
      sleep 0.5
    end
    2.times do
      sample :bd_haus
      sleep 0.25
    end
    with_fx :wobble do
      with_fx :echo do
        4.times do
          sample :drum_cymbal_closed, amp: 0.25
          sleep 0.25
        end
      end
    end
  end
end